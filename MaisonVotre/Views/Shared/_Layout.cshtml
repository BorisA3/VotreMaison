<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container  bg-white">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="../Home"><img src="https://media.giphy.com/media/TKAMHlF0K7ctBQBjim/giphy.gif" width="100px" height="70px" alt="imgf" /></a>
            </div>
            <br />

            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>

                    @* INICIO DE MOSTRAR BOTON DE OPCIONES SI EL USUARIO TIENE EL ROL DE ADMIN *@
                    @if (User.IsInRole("admin"))
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                <span class="nav-label">
                                    Opciones
                                </span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Usuarios", "Index", "ApplicationUsers")</li>
                                <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Productos", "Index", "Productoes")</li>
                                <li>@Html.ActionLink("Ciudades", "Index", "Ciudads")</li>
                                <li>@Html.ActionLink("Empresas", "Index", "Empresas")</li>
                                <li>@Html.ActionLink("Categorias", "Index", "Categorias")</li>
                            </ul>
                        </li>
                    }
                    @* INICIO DE MOSTRAR BOTON DE OPCIONES SI EL USUARIO TIENE EL ROL DE ADMIN *@


                    <li>@Html.ActionLink("Ordenar", "ViewEmpresas", "Empresas")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" align="center">
        @RenderBody()
        <hr />


        

            <p>&copy; @DateTime.Now.Year - © Votre Maison Derechos Reservados</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>



























<style>
    body {
        background-image: url(../../img/fondo.fw.png);
        background-size: cover;
    }

    .navbar{
        background-color: #000000;
    }
</style>

