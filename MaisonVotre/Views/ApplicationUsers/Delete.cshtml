@model MaisonVotre.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
    MaisonVotre.Data.MaisonVotreContext db = new MaisonVotre.Data.MaisonVotreContext();
    var cliente = db.Clientes.Where(e => e.UsuarioEmail == Model.Email);
    var cli = cliente.FirstOrDefault();
}

<h2>Delete</h2>

<h3>Esta seguro que desea eliminar este usuario?</h3>
<div>
    @if (@cli != null)
    {
        <h4>Este usuario está vinculado con un cliente.</h4>
    }
    else
    {
        <h4>Usuario</h4>
    }

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Atrás", "Index")
        </div>
    }
</div>

