@model IEnumerable<MaisonVotre.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categorias.CategoriaNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empresas.EmpresaNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductoNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrecio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductUltimaVenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductExistencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productodescripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categorias.CategoriaNombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresas.EmpresaNombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductoNombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrecio)
        </td>
        <td>
            <img src="@Url.Content(item.Imagen)" width="200" height="100" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductUltimaVenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductExistencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productodescripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductoId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductoId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductoId }) |
            @Html.ActionLink("Añadir al Carrito", "AddtoCart", new { id = item.ProductoId })
        </td>
    </tr>
}

</table>
